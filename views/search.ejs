        <div class="main_content">

          <% if(typeof sentSearch != 'undefined') { %>
            <% if (searchResult.length > 0) { %>
              <p> Search Results... </p>
              <ul>
                <% searchResult.forEach((album) => { %>
                  <img src="<%= album.image_url %>">
                    <li><%= album.album_name %> by <%= album.artist_name %>
                    </li>
                <% }) %>
              </ul>
            <% } else { %>
              <p>No results found....</p>
            <% } %>
          <% } else { %>

          <h3>Search by category...</h3>
          <br>
          <div class="site-search">
    <div class="product_search">
      <form class="search_form_1" role="search" method="post" action="/search">
         <input type="search" placeholder="Search..." name="search" value="">
         <div class="outer">
            <div class="inner"></div>
         </div>
         <div class="select_mate" data-mate-select="active" >
            <select name="searchOption" onchange="">
               <option value="artist">Artist</option>
               <option value="album" >Album</option>
               <option value="genre">Genre</option>
               <option value="allcollections">Collections</option>
            </select>
            <p class="selection_option"  onclick="open_select(this)" ></p>
            <span onclick="open_select(this)" class="icon_select_mate" >
              <!-- <svg fill="#000000" height="24" viewBox="0 0 24 24" width="24" xmlns="http://www.w3.org/2000/svg">
